<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    
     >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="66dp"
          	android:layout_toLeftOf="@+id/linearLayout1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/bookdetails_bookNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未获取商品编号" />

            <TextView
                android:id="@+id/bookdetails_bookprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未获取未获取价格" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未获取库存" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/linearLayout1"
            android:layout_toRightOf="@+id/bookdetails_bookcover"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/bookNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品编号 ：" />

            <TextView
                android:id="@+id/bookprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格 ：" />

            <TextView
                android:id="@+id/storeNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="库存" />
        </LinearLayout>

        <ImageView
            android:id="@+id/bookdetails_bookcover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_launcher" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/AddToShoppingCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加入购物车" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作者：    " />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未获取" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出版社:" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未获取" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论等级 ：" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未获取" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        
        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他用户对该商品的评论：" />
        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
        

    </LinearLayout>

</LinearLayout>
